@using AsM.Components.Pages
@using Cassandra
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="false">
        <MudTooltip Text="Open Menu">
            <MudIconButton OnClick="ToggleMenu" Edge="Edge.Start" Icon="@Icons.Material.TwoTone.Menu" />
        </MudTooltip>
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_open" Width="300px" Height="100%" ClipMode="DrawerClipMode.Always" Anchor="Anchor.Start" Elevation="0" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Alef</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    
    <MudMainContent Class="pt-0 pl-0 pr-0 pb-0">
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-0 ma-0 fill-height">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    bool _open = false;

    public void ToggleMenu()
    {
        _open = !_open;
    }
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>